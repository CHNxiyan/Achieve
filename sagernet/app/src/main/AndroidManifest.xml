        <activity
            android:name="io.nekohasekai.sagernet.ui.profile.ChainSettingsActivity"
            android:configChanges="uiMode" />
        <activity
            android:name="io.nekohasekai.sagernet.ui.profile.BalancerSettingsActivity"
