{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "",
    "beforeDevCommand": "",
    "devPath": "http://localhost:8080",
    "distDir": "../dist"
  },
  "package": {
    "productName": "trojan-client",
    "version": "0.3.0"
  },
  "tauri": {
    "allowlist": {
      "http": {
        "all": true,
        "request": true,
        "scope": [
          "https://**",
          "http://**"
        ]
      },
      "shell": {
        "sidecar": true,
        "scope": [
          {
            "name": "libs/trojan",
            "sidecar": true,
            "args": true
          }
        ]
      },
      "fs": {
        "scope": [
          "$RESOURCE/*"
        ]
      }
    },
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [
        "libs/trojan"
      ],
      "icon": [
        "icons/icon.ico"
      ],
      "identifier": "com.bmshi.trojan.windows",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [
        "config/domain.txt",
        "config/ipset.txt",
        "config/hosts.txt",
        "libs/wintun.dll"
      ],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 860,
        "resizable": false,
        "title": "Trojan客户端",
        "width": 500
      }
    ]
  }
}
